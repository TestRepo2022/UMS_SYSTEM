@{
    Layout = null;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<div class="row">
    <div class="col-4 offset-4">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Login</h4>
            </div>
            <div class="card-body">
                <div class="form-group" id="formGroupUserName">
                    <label id="lblUserName">User Name</label>
                    <input type="text" class="form-control" id="txtUserName" />
                    <span id="errUserName"></span>
                </div>

                <div class="form-group" id="formGroupPassword">
                    <label id="lblPassword">Password</label>
                    <input type="password" class="form-control" id="txtPassword" />
                    <span id="errPassword"></span>
                </div>
                <div class="form-group mt-3" id="formGroupSubmit">            
                    <input type="button" class="btn btn-success" value="Login" id="btnSubmit" />
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/utility.js"></script>
<script src="~/js/login.js"></script>